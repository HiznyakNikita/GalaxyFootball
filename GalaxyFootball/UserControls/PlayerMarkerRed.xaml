<UserControl x:Class="GalaxyFootball.UserControls.PlayerMarkerRed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:GalaxyFootball.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="25">
    <UserControl.Resources>
        <l:IsSelectedToStrokeColorConverter x:Key="IsSelectedToStrokeColorConverter" />
    </UserControl.Resources>
    <Grid>
        <Ellipse Height="25" Width="25" Fill="Red" Opacity="0.6" Stroke="{Binding Player.IsSelected, Converter={StaticResource IsSelectedToStrokeColorConverter}}"/>
        <Label x:Name="lblNumber" Content="{Binding Number}" Foreground="White"  FontSize="5" VerticalAlignment="Top" Height="17" Margin="6,4,3,0"/>
    </Grid>
</UserControl>
