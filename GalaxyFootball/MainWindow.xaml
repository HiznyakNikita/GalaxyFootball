<Window x:Class="GalaxyFootball.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:GalaxyFootball.UserControls" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Height="700" Width="1050" 
        WindowStyle="None" ResizeMode="NoResize" MouseDoubleClick="Window_MouseDoubleClick" KeyDown="Window_KeyDown"
        >
    <Window.Background>
        <ImageBrush ImageSource="/Resources/image/grass.jpg"></ImageBrush>
    </Window.Background>

    <Window.Resources>
    </Window.Resources>
    
    <!--<Window.InputBindings>
        <KeyBinding Command="{Binding ChangePlayerCommand}" Key="Q"></KeyBinding>
    </Window.InputBindings> -->
    <Canvas x:Name="PlaygroundCanvas">
        <c:BallMarker x:Name="ballMarker" Height="25" Width="25"
                      Canvas.Top="{Binding Game.Ball.Position.Y, UpdateSourceTrigger=PropertyChanged}"
                      Canvas.Left="{Binding Game.Ball.Position.X, UpdateSourceTrigger=PropertyChanged}"/>
        
        <Label Content="{Binding Score, UpdateSourceTrigger=PropertyChanged}" 
               FontSize="14" Foreground="White" Canvas.Left="10" Canvas.Top="10" Width="250" Height="26"/>

        <c:PlayerMarkerBlack x:Name="playerAwayMarker1" Height="45" Width="45" DataContext="{Binding Game.TeamAway.Players[0]}"
                             Canvas.Left="{Binding Path=Position.X, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             Canvas.Top="{Binding Path=Position.Y, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        <c:PlayerMarkerBlack x:Name="playerAwayMarker2" Height="25" Width="25" DataContext="{Binding Game.TeamAway.Players[1]}"
                             Canvas.Left="{Binding Path=Position.X, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             Canvas.Top="{Binding Path=Position.Y, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        <c:PlayerMarkerBlack  x:Name="playerAwayMarker3" Height="25" Width="25" DataContext="{Binding Game.TeamAway.Players[2]}"
                              Canvas.Left="{Binding Path=Position.X, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             Canvas.Top="{Binding Path=Position.Y, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
