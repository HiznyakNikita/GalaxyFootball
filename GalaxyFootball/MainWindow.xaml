                            Canvas.Left="{Binding Path=Position.X, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             Canvas.Top="{Binding Path=Position.Y, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        <c:PlayerMarkerRed  x:Name="playerHomeMarker10" Height="25" Width="25" DataContext="{Binding Game.TeamHome.Players[9], Mode=TwoWay}"
                            Canvas.Left="{Binding Path=Position.X, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
