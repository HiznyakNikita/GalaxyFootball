                             Canvas.Top="{Binding Path=Position.Y, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay }"/>
        <c:PlayerMarkerBlack  x:Name="playerAwayMarker10" Height="25" Width="25" DataContext="{Binding Game.TeamAway.Players[9], Mode=TwoWay}"
